pkgname=lib32-libglvnd-git
pkgdesc='The GL Vendor-Neutral Dispatch library (32-bit) (git version)'
pkgver=1.6.0
pkgrel=1
commit=179d7278d7485ceea2d440807be9d677d32aedc4
arch=(i686 x86_64)
url='https://gitlab.freedesktop.org/glvnd/libglvnd'
license=(custom:BSD-like)
# lib32-libglvnd needs lib32-mesa for indirect rendering
depends=(lib32-libxext libglvnd lib32-mesa lib32-opengl-driver)
makedepends=(lib32-libx11 lib32-libxext xorgproto python meson git)
conflicts=(lib32-libglvnd)
provides=(lib32-libglvnd lib32-libgl lib32-libegl lib32-libgles)
provides+=(libEGL.so libGL.so libGLESv2.so libGLX.so libGLdispatch.so libOpenGL.so)
source=(git+https://gitlab.freedesktop.org/glvnd/libglvnd.git#commit=$commit
        LICENSE)
md5sums=('SKIP'
         '9a2662ebb15bd62239d50523abce4f4a')

pkgver(){
  cd ${srcdir}/libglvnd

  # cutting off 'foo-' prefix that presents in the git tag
  git describe --long --tags --abbrev=7 | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build(){
export CC='gcc -m32'
export CXX='g++ -m32'
export ASFLAGS=--32
export CFLAGS=-m32
export CXXFLAGS=-m32
export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

  cd ${srcdir}/libglvnd

  # Fix for build error
  sed -i "s/subdir('tests')/ /" meson.build

  # remove build dir if there is one
  if dir build_32; then
    rm -rf -v build_32
  fi

  # create build dir
  mkdir -p -v build_32

  meson setup build_32 \
  -D b_ndebug=true \
  -D buildtype=plain \
  --wrap-mode=nofallback \
  -Dprefix=/usr \
  -D sysconfdir=/etc \
  --libdir=/usr/lib32 \
  -Dasm=enabled \
  -Dx11=enabled \
  -Degl=true \
  -Dglx=enabled \
  -Dgles1=true \
  -Dgles2=true \
  -Dtls=true \
  -Ddispatch-tls=true \
  -Dheaders=true \
  -Dentrypoint-patching=enabled

  #meson configure build_32/
  
  ninja -C build_32

  meson compile -C build_32
}

package_lib32-libglvnd-git(){
  DESTDIR="$pkgdir" ninja -C ${srcdir}/libglvnd/build_32/ install

  rm -rf "${pkgdir}"/usr/{include,share}

  # installing license
  install -Dt "$pkgdir"/usr/share/licenses/"$pkgname" -m644 LICENSE
}

