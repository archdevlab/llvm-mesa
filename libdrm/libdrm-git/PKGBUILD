pkgname=libdrm-git
pkgdesc='Userspace interface to kernel DRM services (git version)'
pkgver=2.4.115
pkgrel=1
commit=98e1db501173303e58ef6a1def94ab7a2d84afc1
arch=(x86_64)
url='http://dri.freedesktop.org/'
license=(custom)
depends=(libpciaccess)
makedepends=(python-docutils meson git)
checkdepends=(cairo)
replaces=(libdrm-new libdrm-nouveau)
conflicts=(libdrm)
provides=(libdrm libdrm-git)
source=(git+https://gitlab.freedesktop.org/mesa/drm.git#commit=$commit
        COPYING)
md5sums=(SKIP
         SKIP)

pkgver(){
  cd ${srcdir}/drm

  # cutting off 'foo-' prefix that presents in the git tag
  git describe --long --tags --abbrev=7 | sed 's/^libdrm.//;s/\([^-]*-g\)/r\1/;s/-/./g'
}


build(){
  cd ${srcdir}/drm

  if dir build_64; then
    rm -rf -v build_64
  fi

  mkdir build_64

  meson setup build_64 \
  -D b_ndebug=true \
  -D buildtype=plain \
  --wrap-mode=nofallback \
  -Dprefix=/usr \
  -D sysconfdir=/etc \
  -Dintel=enabled \
  -Dradeon=enabled \
  -Damdgpu=enabled \
  -Dnouveau=enabled \
  -Dvmwgfx=enabled \
  -Domap=enabled \
  -Dexynos=enabled \
  -Dfreedreno=enabled \
  -Dtegra=enabled \
  -Dvc4=enabled \
  -Detnaviv=enabled \
  -Dcairo-tests=disabled \
  -Dman-pages=disabled \
  -Dvalgrind=disabled \
  -Dfreedreno-kgsl=true \
  -Dinstall-test-programs=true \
  -Dudev=true \
  -Dtests=true

  #meson configure build_64/
  
  ninja -C build_64

  meson compile -C build_64
}

package_libdrm-git(){
  DESTDIR="$pkgdir" ninja -C ${srcdir}/drm/build_64/ install

  # installing license
  install -Dt "$pkgdir"/usr/share/licenses/"$pkgname" -m644 COPYING
}

